#!/usr/bin/env node

(async () => {
    const { execute } = require("..");

    const options = {
        config: process.env.npm_config_config,
        defaultConfig: process.env.npm_config_defaultConfig,
        releaseConfigPath: process.env.npm_config_releaseConfigPath,
        update: process.env.npm_config_update,
        verification: process.env.npm_config_verification,
    };

    const success = await execute(options).catch(e => {
        console.error(e);
        process.exit(1);
    });

    if (!success) {
        process.exit(1);
    }
})();
