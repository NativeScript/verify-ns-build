#!/usr/bin/env node

(async () => {
    const { execute } = require("..");

    const options = {
        path: process.env.npm_config_path,
        releaseConfig: process.env.npm_config_releaseConfig,
        update: process.env.npm_config_update,
        verification: process.env.npm_config_verification,
    };

    await execute(options).catch(e => {
        console.error(e);
        process.exit(1);
    });
})();
