{
    "$schema": "../../verify-schema.json",

    "updateFlavors": [
        {
            "name": "latest",
            "dependencies": [
                "nativescript-angular@latest",
                "tns-core-modules@latest"
            ],
            "devDependencies": [
                "nativescript-dev-typescript@latest",
                "nativescript-dev-webpack@latest"
            ],
            "updateAngularDeps": true,
            "updateWebpack": {
                "configs": true,
                "deps": true
            }
        },
        {
            "name": "next",
            "dependencies": [
                "nativescript-angular@next",
                "tns-core-modules@next"
            ],
            "devDependencies": [
                "nativescript-dev-typescript@next",
                "nativescript-dev-webpack@next"
            ],
            "updateAngularDeps": true,
            "updateWebpack": {
                "configs": true,
                "deps": true
            }
        }
    ],

    "verificationFlavors": [
        {
            "name": "default",
            "verifications": [
                {
                    "name": "android-release",
                    "type": "build",
                    "platform": "android",
                    "bundle": false,
                    "release": true
                },
                {
                    "name": "android-bundle",
                    "type": "build",
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": [
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "160000",
                        "vendor.js": "3200000"
                    }
                },
                {
                    "name": "android-snapshot",
                    "type": "build",
                    "bundle": true,
                    "platform": "android",
                    "release": true,
                    "tnsOptions": [
                        "--env.aot",
                        "--env.uglify",
                        "--env.snapshot",
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "85000",
                        "vendor.js": "1350000"
                    }
                },
                {
                    "name": "ios-release",
                    "type": "build",
                    "platform": "ios",
                    "bundle": false,
                    "release": true
                },
                {
                    "name": "ios-bundle",
                    "type": "build",
                    "platform": "ios",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": [
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "160000",
                        "vendor.js": "3300000"
                    }
                },
                {
                    "name": "ios-aot-uglify",
                    "type": "build",
                    "platform": "ios",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": [
                        "--env.aot",
                        "--env.uglify",
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "80000",
                        "vendor.js": "1300000"
                    }
                },
                {
                    "name": "android-snapshot-run",
                    "type": "run",
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": [
                        "--env.uglify",
                        "--env.snapshot",
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "85000",
                        "vendor.js": "1350000"
                    }
                },
                {
                    "name": "ios-uglify",
                    "type": "run",
                    "platform": "ios",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": [
                        "--env.uglify",
                        "--env.report"
                    ],
                    "outputSizes": {
                        "bundle.js": "80000",
                        "vendor.js": "1300000"
                    }
                }
            ]
        }
    ]
}