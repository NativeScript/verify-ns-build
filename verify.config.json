{
    "$schema": "./verify-schema.json",

    "updateFlavors": [
        {
            "name": "next",
            "dependencies": [
                {
                    "name": "nativescript-dev-angular",
                    "package": "nativescript-dev-angular@next",
                    "type": "dependency"
                },
                {
                    "name": "nativescript-dev-webpack",
                    "package": "nativescript-dev-webpack@next",
                    "type": "devDependency"
                }
            ],
            "updateWebpack": {
                "configs": true,
                "deps": true
            },
            "updateAngularDeps": true
        },
        {
            "name": "official",
            "updateWebpack": {
                "configs": true,
                "deps": true
            },
            "updateAngularDeps": true,
            "keepReport": true
        }
    ],

    "verificationFlavors": [
        {
            "name": "android",
            "verifications": [
                {
                    "name": "debug",
                    "type": "build",
                    "platform": "android",
                    "bundle": false,
                    "release": true,
                    "tnsOptions": ["--release"]
                },
                {
                    "type": "build",
                    "keepReport": true,
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "outputSizes": {
                        "bundle.js": "15000",
                        "vendor.js": "1700000"
                    }
                },
                {
                    "type": "run",
                    "platform": "android",
                    "release": true,
                    "bundle": false,
                    "timeline": true,
                    "startup": "2000"
                },
                {
                    "type": "build",
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": ["--env.uglify", "--env.snapshot"],
                    "outputSizes": {
                        "bundle.js": "5000",
                        "vendor.js": "700000"
                    }
                }
            ]
        },
        {
            "name": "ios",
            "verifications": [
                {
                    "name": "debug",
                    "type": "build",
                    "platform": "ios",
                    "bundle": false,
                    "release": true,
                    "tnsOptions": ["--release"]
                },
                {
                    "type": "build",
                    "keepReport": true,
                    "platform": "ios",
                    "bundle": true,
                    "release": true,
                    "outputSizes": {
                        "bundle.js": "15000",
                        "vendor.js": "1700000"
                    }
                },
                {
                    "type": "build",
                    "platform": "ios",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": ["--env.uglify", "--env.snapshot"],
                    "outputSizes": {
                        "bundle.js": "5000",
                        "vendor.js": "700000"
                    }
                },
                {
                    "type": "test",
                    "platform": "ios",
                    "options": ["--runType=android23", "--timeout=200000"]
                }
            ]
        }
    ]
}
