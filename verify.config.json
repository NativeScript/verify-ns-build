                    "release": true,
                    "tnsOptions": ["--release"]
                },
                {
                    "type": "build",
                    "keepReport": true,
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "outputSizes": {
                        "bundle.js": "15000",
                        "vendor.js": "1700000"
                    }
                },
                {
                    "type": "run",
                    "platform": "android",
                    "release": true,
                    "bundle": false,
                    "timeline": true,
                    "startup": "2000"
                },
                {
                    "type": "build",
                    "platform": "android",
                    "bundle": true,
                    "release": true,
                    "tnsOptions": ["--env.uglify", "--env.snapshot"],
