{
    // This provides intellisense and validation for your verification configuration.
    "$schema": "./verify-schema.json",

    "dependencies": [
        "nativescript-angular@next"
    ],
    "devDependencies": [
        "nativescript-dev-webpack@next"
    ],
    "updateWebpack": {
        "configs": true,
        "deps": true
    },
    "updateAngularDeps": true,
    "keepReport": true,

    // Builds are executed in the specified order.
    "build": [
        {
            "name": "debug",
            "platform": "android",
            "bundle": false,
            "release": true,
            "tnsOptions": ["--release"]
        },
        {
            "keepReport": true,
            "platform": "android",
            "bundle": true,
            "release": true,
            "outputSizes": {
                "bundle.js": "15000",
                "vendor.js": "1700000"
            }
        },
        {
            "platform": "android",
            "bundle": true,
            "release": true,
            "tnsOptions": ["--env.uglify", "--env.snapshot"],
            "outputSizes": {
                "bundle.js": "5000",
                "vendor.js": "700000"
            }
        }
    ],

    // Runs are executed in specified order AFTER the builds.
    "run": [
        {
            "platform": "android",
            "release": true,
            "bundle": false,
            "timeline": true,
            "startup": "2000"
        }

    ]
}
